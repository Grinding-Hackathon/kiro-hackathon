{
  "name": "offline-blockchain-wallet-backend",
  "version": "1.0.0",
  "description": "Backend API server for offline blockchain wallet system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"src/test/.*\\.test\\.ts$\" --testPathIgnorePatterns=\"integration|e2e|performance\"",
    "test:integration": "jest --testPathPattern=\"src/test/integration/.*\\.test\\.ts$\"",
    "test:e2e": "jest --testPathPattern=\"src/test/e2e/.*\\.test\\.ts$\"",
    "test:performance": "jest --testPathPattern=\"src/test/performance/.*\\.test\\.ts$\" --testTimeout=30000",
    "test:services": "jest --testPathPattern=\"src/test/services/.*\\.test\\.ts$\"",
    "test:middleware": "jest --testPathPattern=\"src/test/middleware/.*\\.test\\.ts$\"",
    "test:controllers": "jest --testPathPattern=\"src/test/controllers/.*\\.test\\.ts$\"",
    "test:database": "jest --testPathPattern=\"src/test/database/.*\\.test\\.ts$\"",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "compile": "npx hardhat compile",
    "test:contracts": "npx hardhat test",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network hardhat",
    "deploy:sepolia": "npx hardhat run scripts/deploy.ts --network sepolia",
    "deploy:goerli": "npx hardhat run scripts/deploy.ts --network goerli",
    "deploy:mainnet": "npx hardhat run scripts/deploy-mainnet.ts --network mainnet",
    "deploy:production": "./scripts/deploy-production.sh",
    "backup:database": "./scripts/backup-database.sh",
    "setup:ssl": "./scripts/setup-ssl.sh"
  },
  "keywords": [
    "blockchain",
    "wallet",
    "offline",
    "ethereum",
    "cryptocurrency"
  ],
  "author": "Offline Wallet Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "secp256k1": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "web3": "^4.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.7",

    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "hardhat": "^2.26.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
